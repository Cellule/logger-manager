{
  // install/enable parser once/if using es6
  "parser": "babel-eslint",
  "env": {
    "node": true,
  },
  "ecmaFeatures": {
  },
  "rules": {
    // First number is error level 0: ignore, 1: warning, 2: error
    // Second is option ie: [1, "double"] = Warn using double option

    // Code style
    "indent": [2, 2],
    "quotes": [2, "double"],
    "max-len": [2, 80],

    // Disable default options
    "no-unused-vars": 1,
    "no-multi-spaces": 0,
    "no-mixed-requires": 0,
    "no-underscore-dangle": 0,
    "strict": 0,
  }
}
